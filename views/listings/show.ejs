<%layout("/layouts/boilerplate")%>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
    <div class="card col-8 listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="Listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          Owned BY:
          <i><%= listing.owner.username %></i>
          <br />
        </p>
        <p class="card-text"><%= listing.description %><br /></p>
        <p class="card-text">
          â‚¹<%= listing.price.toLocaleString("en-IN") %><br />
        </p>
        <p class="card-text"><%= listing.location %><br /></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <!-- Buttons -->
<% if(currUser && listing.owner._id.equals(currUser._id)){%>
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn"
        >Edit</a
      >
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=DELETE"
        
      >
        <button type="submit" class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
  <% } %>
  <% if(currUser){%>
    
    <hr />
    <div class="col-8 offset-1 mb-3">
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3"></div>
      <div>
        <label for="rating" class="form label">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          step="1"
          id="rating"
          name="review[rating]"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form label">Comments</label>
        <textarea
          name="review[comment]"
          class="form-control"
          id="comment"
          cols="30"
          rows="5"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some feedback to review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <% } %>
    <!-- All Reviews -->
    
    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (let review of listing.reviews) { %>
      <div class="ms-3 card col-5 mb-3">
        <div class="card-body">
          <div class="card-title">
            <%= review.author ? review.author.username : "Anonymous" %>
          </div>
          <p class="card-text">
            <%= review.comment %> <br />
            <b><%= review.rating %> stars</b>
          </p>
        </div>
        <form
          class="mb-3"
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
