<% layout("/layouts/boilerplate") %>

<h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3">
  <% for (let listing of alllistings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image?.url || listing.image || 'https://media.istockphoto.com/id/517188688/photo/mountain-landscape.jpg?s=612x612&w=0&k=20&c=A63koPKaCyIwQWOTFBRWXj_PwCrR4cEoOw2S9Q7yVl8=' %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem; object-fit: cover"
      />

      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          â‚¹<%= listing.price.toLocaleString("en-IN") %>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
